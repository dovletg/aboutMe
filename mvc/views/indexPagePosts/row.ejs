<%# Standard Posts

    <div class="col-md-4 d-flex">
        <div class="blog-entry ftco-animate">
            POST
        </div>
    </div>

%>


<%# Horizontal Posts

    <div class="col-md-8 d-flex">
        <div class="row">
            <div class="col-md-12">
                <div class="blog-entry ftco-animate d-md-flex align-items-center">
                    POST
                </div>
            </div>
            <div class="col-md-12">
                <div class="blog-entry ftco-animate d-md-flex align-items-center">
                    POST
                </div>
            </div>
        </div>
    </div>

%>


<% for(let i = 0; i < posts.length; i++) { %>
    <% if(posts_meta[i].includes("hp")) { %>

        <div class="col-md-8 d-flex">
            <div class="row">
                <div class="col-md-12">
                    <%- include("post.ejs", { post: posts[i], post_meta: posts_meta[i] }); %>
                </div>
                <div class="col-md-12">
                    <%- include("post.ejs", { post: posts[++i], post_meta: posts_meta[i] }); %>
                </div>
            </div>
        </div>

    <% } else { %>

        <div class="col-md-4 d-flex">
            <%- include("post.ejs", { post: posts[i], post_meta: posts_meta[i] }); %>
        </div>

    <% } %>
<% } %>
